@model IEnumerable<DylanTaylorArt.Models.Graphic>

@{
    ViewBag.Title = "Graphics List";
}

<section class="jumbotron">
    <h1>Dylan Taylor Art</h1>
    <h2>List of all Bob Dylan Graphics</h2>
</section>

<p>
    @Html.ActionLink("Add New Graphic", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Collection
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Copy No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FramedWith)
        </th>
        <th class="text-center">
            Format
        </th>
        <th class="text-center">
            Portfolio
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            BDA Price
        </th>
        <th>
            Castle Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Collection.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.CopyNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FramedWith)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Format)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Portfolio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BDA_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CastlePrice)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.GraphicID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "Details", new { id = item.GraphicID }, new { @class = "btn btn-default" })
            @Html.ActionLink("Delete", "Delete", new { id = item.GraphicID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
