@model DylanTaylorArt.Models.Collection

@{
    ViewBag.Title = "Collections";
    int colNo = 0;
}

<section class="jumbotron">

    <h1>Dylan Taylor Art</h1>
    <h2>@Model.CollectionName Collection</h2>
    
    @using (Html.BeginForm())
    {
        @Html.DropDownList("CollectionID", String.Empty)
        <input type="submit" value="Change Collection"/>
    }

</section>

<section>

    <div class="row">
        @foreach (var graphic in Model.Graphics)
        {

            if (colNo > 0 && colNo % 3 == 0)
            {
                @:</div><div class="row">
            }

            <div class="col-lg-4">
                <article class="panel panel-success">
                    <div class="panel-heading">
                        <h4 class="text-center">@graphic.Title</h4>
                    </div>
                    <div class="panel-body">
                        <a href="#print1Details" data-toggle="collapse">
                            <figure>
                                <img class="img-responsive" src="/Images/@Model.ImagePath/@graphic.SmallImagePath">
                            </figure>
                        </a>
                        <br />
                        <p class="text-right">
                            @Model.CollectionName
                        </p>
                        <p class="text-right">
                            @graphic.Format Format
                        </p>
                        <p class="text-right">
                            <strong>£@graphic.Price</strong>
                        </p>
                        @{ 
                            string detailsID = "details" + graphic.GraphicID;
                        }
                        <p>
                            <button class="btn btn-success pull-right" type="button"
                                    data-toggle="collapse" data-target="#@detailsID">
                                Limited Edition <span class="badge">1</span>
                            </button>
                        </p>

                        <div class="collapse" id="@detailsID">
                        <br /><br />
                        <div class="well">
                            <p>
                                A limited edition (295) hand signed in graphite pencil 
                                by Bob Dylan, entitled @graphic.Title.
                            </p>
                            <p>Printed on @graphic.Paper</p>
                            <table class="table table-bordered">
                                <tr>
                                    <td>
                                        Image Size
                                    </td>
                                    <td>
                                        @graphic.ImageHeight x @graphic.ImageWidth in
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Paper Size
                                    </td>
                                    <td>
                                        @graphic.PaperHeight x @graphic.PaperWidth in
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Framed with
                                    </td>
                                    <td>
                                        @graphic.FramedWith
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Copy No
                                    </td>
                                    <td>
                                        @graphic.CopyNo/295
                                    </td>
                                </tr>

                            </table>
                        </div>
                    </div>
                                
                </div>
            </article>
        </div>


            colNo++;
        }
    </div>

</section>
